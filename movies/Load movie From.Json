fetch('js/data/movieData.json')
  .then(res => res.json())
  .then(data => {
    const container = document.getElementById('movieList'); // Make sure 'movieList' exists in your HTML
    container.innerHTML = ''; // Clear the existing list (if any)
    
    // Loop through the data to create movie cards
    for (const [key, movie] of Object.entries(data)) {
      const card = document.createElement('a');
      card.href = movie.link; // Link to individual movie page
      card.className = "bg-gray-800 hover:bg-gray-700 rounded-lg shadow p-4 block transition"; // Styling for the card
      card.innerHTML = `
        <img src="${movie.cover}" alt="${movie.title}" class="w-full h-40 object-cover rounded mb-2">
        <h2 class="text-xl font-bold text-center">${movie.title}</h2>
      `;
      container.appendChild(card); // Append the card to the container
    }
  })
  .catch(error => {
    console.error("Error loading movie data:", error);
  });
